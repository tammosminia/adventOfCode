class Santa {
  //houses((1, 2)) is how many presents house at coordinates x=1, y=2 got
  var houses: Map[(Int, Int), Int] = Map((0, 0) -> 1).withDefaultValue(0)

  var currentLocation: (Int, Int) = (0, 0)

  def deliver(location: (Int, Int)) = {
    houses = houses.updated(location, houses(location) + 1)
  }

  def move(dx: Int, dy: Int): Unit = {
    currentLocation = (currentLocation._1 + dx, currentLocation._2 + dy)
    deliver(currentLocation)
  }

  def move(c: Char): Unit = c match {
    case '^' => move(0, -1)
    case 'v' => move(0, 1)
    case '<' => move(-1, 0)
    case '>' => move(1, 0)
  }

  def housesWithPresents: Int = {
    houses.values.count(_ > 0)
  }
}

class RoboSanta {
  //houses((1, 2)) is how many presents house at coordinates x=1, y=2 got
  var houses: Map[(Int, Int), Int] = Map((0, 0) -> 1).withDefaultValue(0)

  var santaLocation: (Int, Int) = (0, 0)
  var roboLocation: (Int, Int) = (0, 0)
  var nextIsSanta = true
  def deliver(location: (Int, Int)) = {
    houses = houses.updated(location, houses(location) + 1)
  }

  def move(dx: Int, dy: Int): Unit = nextIsSanta match {
    case true =>
      moveSanta(dx, dy)
      nextIsSanta = false
    case false =>
      moveRobo(dx, dy)
      nextIsSanta = true
  }

  def moveSanta(dx: Int, dy: Int): Unit = {
    santaLocation = (santaLocation._1 + dx, santaLocation._2 + dy)
    deliver(santaLocation)
  }

  def moveRobo(dx: Int, dy: Int): Unit = {
    roboLocation = (roboLocation._1 + dx, roboLocation._2 + dy)
    deliver(roboLocation)
  }

  def move(c: Char): Unit = c match {
    case '^' => move(0, -1)
    case 'v' => move(0, 1)
    case '<' => move(-1, 0)
    case '>' => move(1, 0)
  }

  def housesWithPresents: Int = {
    houses.values.count(_ > 0)
  }
}

def s(i: String) = {
  val s = new Santa
  i.foreach(s.move)
  println(s.housesWithPresents)

  val r = new RoboSanta
  i.foreach(r.move)
  println(r.housesWithPresents)
}


